acl goodclients {
        localhost;
        10.0.0.0/27;
        10.0.10.0/27;
        10.0.20.0/27;
        10.0.30.0/28;
        192.168.0.0/28;
};

options {
        directory "/var/cache/bind";

        recursion yes;
        listen-on { 10.0.10.3; };
        allow-transfer { none; };
        allow-query { goodclients; };

        forwarders {
                1.1.1.1;
                1.0.0.1;
        };

        dnssec-validation auto;

        listen-on-v6 { any; };
};